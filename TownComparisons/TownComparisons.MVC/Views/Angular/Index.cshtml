@{
    ViewBag.Title = "Index";
}
@section scripts {
    <script src="~/App/Categories/App.js"></script>
    <script src="~/App/Categories/ViewModels/RootViewModel.js"></script>
    <script src="~/App/Categories/ViewModels/CategoriesViewModel.js"></script>
